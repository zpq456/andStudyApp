<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/dark_red</item>
        <item name="colorAccent">@color/gray</item>

        <!--속성을 오버라이드 할때는 맨 앞에 android:를 붙여야 한다.-->
        <item name="android:colorBackground">@color/soothing_blue</item>
        <item name="buttonStyle">@style/BeatBoxButton2</item>
    </style>

    <style name="BeatBoxButton1" parent="android:style/Widget.Holo.Button">
        <item name="android:background">@color/dark_blue</item>
    </style>

    <style name="BeatBoxButton2" parent="android:style/Widget.Material.Button">
        <item name="android:background">@color/dark_blue</item>
    </style>


</resources>
